        android:theme="@style/AppTheme">
        <activity
            android:name=".UserSignActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScrollingActivity" />

        <receiver android:name=".AlarmRcvr" />

        <service android:name=".RingtonePlayingService" />

        <activity
            android:name=".TestAlarm"
            android:label="@string/title_activity_user_sign"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FireBaseSignIn"></activity>
    </application>

</manifest>